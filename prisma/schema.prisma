datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String?
  password String

  moods MoodReport[]
}

model MoodReport {
  id         String   @id @default(uuid())
  date       DateTime @db.Date
  mood_score Int
  mood_label String?
  notes      String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
}
