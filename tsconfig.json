{
  "compilerOptions": {
    /* Type Checking */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    
    /* Modules */
    "module": "CommonJS", // PENTING: Sesuaikan dengan tipe proyek Anda
    "moduleResolution": "Node", // Standar untuk Node.js
    "esModuleInterop": true, // Wajib untuk kompatibilitas antar modul
    
    /* Emit */
    "outDir": "./dist", // Folder output untuk file JavaScript hasil kompilasi
    "rootDir": "./src", // Folder input yang berisi file TypeScript
    "noEmit": true, // Saat development, biarkan ts-node yang menangani kompilasi di memori
    
    /* Language and Environment */
    "target": "ES2022", // Targetkan versi ECMAScript yang modern
    "lib": ["ES2022"]
  },
  "include": ["src/**/*", "prisma/seed.ts"], // Hanya proses file di dalam folder src
  "exclude": ["node_modules"] // Abaikan node_modules
}